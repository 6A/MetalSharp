{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build tests",
      "program": "${workspaceFolder}/MetalSharp.Tests/bin/Debug/netcoreapp2.0/MetalSharp.Tests.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    }, {
      "name": "Launch brainfuck",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build bf",
      "program": "${workspaceFolder}/MetalSharp.Brainfuck/bin/Debug/netcoreapp2.0/MetalSharp.Brainfuck.dll",
      "args": ["hello", "world"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
